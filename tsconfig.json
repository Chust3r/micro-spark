{
	"compilerOptions": {
	  "module": "ESNext",
	  "moduleResolution": "node",
	  "target": "ESNext",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "declaration": true,
	  "declarationDir": "dist/types",
	  "outDir": "dist",
	  "rootDir": "src",
	  "types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "tests"]
  }
  